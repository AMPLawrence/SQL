--Display the database ordered by rating (highest (5) to lowest (1))

SELECT *
FROM book_ratings
ORDER BY rating desc;

--Display the average rating from 2023

SELECT year_read, AVG(rating)
FROM book_ratings
WHERE year_read = 2023;

--Display the average rating per year

SELECT year_read, AVG(rating)
FROM book_ratings
GROUP BY year_read;

--Display book titles and ratings for all books rated 4 or higher

SELECT title, rating
FROM book_ratings
WHERE rating >=4
ORDER BY rating;

--Display the number of books rated 4 or higher grouped by year

SELECT year_read, COUNT(rating)
FROM book_ratings
WHERE rating >=4
GROUP BY year_read;
